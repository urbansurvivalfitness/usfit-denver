@{
    ViewBag.Title = "Class Schedules";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section featured{
    <section class="featured">
        <div class="featured-content content-wrapper container_12">
            <h1>Workout & Fitness Classes - Scheduled to Meet Your Active Lifestyle!</h1>
            <p>Our workout classes are a unique combination of Strength, Resistance, Core, Cardio,
                and Flexibility training guaranteed to challenge you and improve your fitness level.</p>

            <section class="content-section">
                <div class="grid_12">
                    <h2><strong class="callout">Call Us Today! <a href="tel:@USFit.Web.Constants.PrimaryPhone">(@USFit.Web.Constants.PrimaryPhone)</a></strong></h2>
                    <br />
                </div>
            </section>
            <div class="clearfix">
            </div>

            <div class="grid_7 suffix_1">
                <h2>Class Schedules</h2>
                <ul>
                    <li>Evenings - Monday thru Friday - 6:00 PM to 6:50 PM</li>
                    <li>Fitness Burst - Tuesday & Thursday - 5:15 PM to 5:45 PM </li>
                    <li>Weekends - Saturday - 10:00 AM - 30min. Butt Kick Class</li>
                </ul>
            </div>

            <div class="coupon grid_4 primary-nav-button" style="margin-top: 2em;">
                <a id="coupon-button" href="/home/free-coupon?src=class-schedules" title="Print a coupon for our fitness classes & workout classes" class="super button orange">Free Drop-In Pass
                    <br />
                    (Print It!)</a>
            </div>
            <div class="clearfix">
            </div>
            <br />
            <div class="grid_4">
                <h2>Zumba Class Schedule</h2>
                <ul>
                    <li>Saturday - 10:45 AM to 11:45 PM</li>
                </ul>
            </div>
            <div class="grid_4">
                <h2>Kids & Seniors</h2>
                <ul>
                    <li>Fitness Classes for Kids & Seniors are Starting Soon</li>
                    <li>Limited Space Available</li>
                    <li>Call for Details...</li>
                </ul>
            </div>
            <div class="grid_4">
                <h2>Self Defense</h2>
                <ul>
                    <li>Self Defense Workout Classes are Starting Soon</li>
                    <li>Limited Space Available</li>
                    <li>Call for details...</li>
                </ul>
            </div>
        </div>
        <div class="clearfix">
        </div>
    </section>
}
<div class="grid_4">
    <h3>One on One Personal Training</h3>
    <ul>
        <li>Personal Training - Appointment Only</li>
        <li>Call for details...</li>
    </ul>
</div>
<div class="grid_4">
    <h3>Private Groups</h3>
    <ul>
        <li>Want some conditioning for your team or squad?</li>
        <li>We offer private group classes as well, by appointment only</li>
        <li>Call for Details...</li>
    </ul>
</div>
<div class="grid_4">
    <h3>Additional Notes</h3>
    <ul>
        <li>All schedules are subject to change</li>
        <li>Please contact us with any questions regarding schedules</li>
    </ul>
</div>
@section meta{
    <meta name="description" content="We offer many schedules for our group fitness classes and workout classes to people in the Denver, Park Hill, Stapleton, and the City Park area.  
    Can you survive one of the greatest workouts in town?" />
}
