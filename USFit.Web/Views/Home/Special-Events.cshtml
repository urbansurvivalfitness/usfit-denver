            <div class="clearfix">
            </div>
            

            <div id="obstacle-course-more-info" class="float-left">
                        <img class="more-info" src="@Url.Content("../Images/info-red-32.png")" /><a class="more-info" href="~/SpecialEvents/Urban-Survivalist-Obstacle-Course">Get More Info!!!</a>
            </div>
            
        </div>
    </section>
